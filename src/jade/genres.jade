block scripts
    script(src="js/script.min.js")
    script.
        $(document).ready(function() {
            var $sidebar = $('.sidebar'),
                $mainMenu = $sidebar.find('.main-menu');

            $mainMenu.find('> ul:first-child > li:nth-child(5)').addClass('active');

            var genres = [
                    'Rock', 'Pop', 'Indie', 'Alternative', 'Elettronica',
                    'House', 'Dance', 'Hip Hop', 'Metal',
                    'Soul', 'Classica', 'R&B', 'Country', 'Jazz',
                    'Blues', 'Reggae', 'Latino', 'Punk', 'Funk', 'Etnica'
                ],
                $genresContainer = $('.genres-container');

            genres.sort();

            var genresString = '';
            for (var i=0; i<genres.length; i++) {
                genresString += '' +
                    '<div class="genre-unit" style="background-image: url(img/genres/' + genres[i].replace(' ', '-').toLowerCase() + '.jpg)">' +
                        '<a href="#" class="genre-overlay">' + genres[i] + '</a>' +
                    '</div>';
            }
            $genresContainer.html(genresString);
        });
