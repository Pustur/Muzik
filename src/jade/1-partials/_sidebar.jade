mixin menuItem(text, url, icon, className)
    li(class="#{className}")
        a(href="#{url}")
            i.material-icons #{icon}
            | #{text}


section.sidebar
    button.sidebar-button.close
        i.material-icons close

    a(href="#").logo
        include _logo
    nav
        ul
            -each menuItem in menu
                +menuItem(menuItem.name, menuItem.link, menuItem.icon, menuItem.class)
