block scripts
    script(src="js/jquery.min.js")
    script.
        $('html, body').css({
            overflow: 'auto',
            height: 'auto'
        });
        $('.topbar-landing').css({
            boxShadow: 'none'
        });
        $('a[href^="#"]').on('click', function(e) {
            e.preventDefault();
            
            var target = this.hash,
                $target = $(target);
            
            $('html, body').stop().animate({
                'scrollTop': $target.offset().top
            }, 900, 'swing', function(){
                window.location.hash = target;
            });
        });
